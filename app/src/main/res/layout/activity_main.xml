<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ln">
<!--Acelerometro-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/UnoLayout"
        >
        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/xValue"
            />

        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/yValue"
             />
        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/zValue"
            />

    </LinearLayout>
<!--Giroscopio-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/SegundoLayout"
        android:layout_below="@+id/UnoLayout"
        android:layout_marginTop="30sp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/xGiroValue"
            />

        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/yGiroValue"
            />
        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/zGiroValue"
            />

    </LinearLayout>
<!--Sensor magnometro-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/TerceroLayout"
        android:layout_below="@+id/SegundoLayout"
        android:layout_marginTop="30sp">
        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/xMagnoValue"
            />

        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/yMagnoValue"
            />
        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/zMagnoValue"
            />
    </LinearLayout>
    <!--Sensor de luz,presion,temperatura,humedad -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30sp"
        android:id="@+id/CuartoLayut"
        android:layout_below="@+id/TerceroLayout"
        >
        <TextView
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:id="@+id/Light"
            />

        <TextView
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:id="@+id/Pressure"
            />
        <TextView
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:id="@+id/Temperature"
            />
        <TextView
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:id="@+id/Humidity"
            />

    </LinearLayout>








</RelativeLayout>